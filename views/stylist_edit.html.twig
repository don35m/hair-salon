    <title>Stylist List</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <div class="container">

        <h1>Have {{ stylist.getName }} work another day!</h1>

        <form action="/stylists/{{ stylist.getId }}" method="post">
            <input name="_method" type="hidden" value="patch">

            <label for="name">Exchange your Stylist</label>
            <input id="name" name="name" type="text">

            <button type="submit" class="btn-primary">Update</button>
        </form>

        <form action="/stylists/{{ stylist.getId }}" method="post">
            <input name="_method" type="hidden" value="delete">

            <button type="submit" class="btn-danger">Revove this Stylist</button>
        </form>
