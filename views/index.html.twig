<html>
<head>
    <title>Hair Salon</title>
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0">
    <link rel='stylesheet' href='https://maxcdn.bootstrapcdn.com/bootstrap/3.3.1/css/bootstrap.min.css'>
    <link rel="stylesheet" href="styles.css">
</head>
<body>

    <div class="container">
        <div class="row">
            <h1 class="text-center">Don's Salon</h1>
            <hr>

            <div class="col-md-6">
                <h2>My Stylists</h2>
                <div class='form-group'>
                    <form action="/stylists" method="post">
                        <input id="name" name="name" type="text" placeholder="Enter Stylist">
                        <hr>
                        <button type="submit" class="btn-primary btn-lg">Add Stylist</button>
                    </form>
                </div>
            </div>

            <div class="col-md-6">
                {% if stylists is not empty %}
                    <h4>Here are all your Stylists</h4>
                    <ul>
                        {% for stylist in stylists %}
                            <li><a href="/stylists/{{ stylist.getId }}">{{ stylist.getName }}</a></li>
                        {% endfor %}
                    </ul>
                {% else %}
                    <h4>There are no stylists yet!</h4>
                {% endif %}
            <br>
                <form action='/delete_stylists' method='post'>
                    <button type='submit' class="btn-primary btn-lg">Clear Stylists</button>
                </form>
            </div>
        </div>
    </div>
</body>
</html>
